<% unless @current_student_assignments.empty? %>
  <div class="card" id="current_teams">
    <div class="card-content">
      <span class="card-title">Current Students</span>
      <table class="lined">
        <thead>
          <th>Name</th>
          <th>Position</th>
        </thead>
          <% for assignment in @current_student_assignments %>
            <tr>
              <td><%= link_to assignment.student.proper_name, student_path(assignment.student) %></td>
              <td><%= assignment.position %></td>
            </tr>
          <% end %>
      </table>
      <div class="card-action">
        <%= link_to "Add a new student", new_student_team_path(team_id: @team.id) %>
      </div>
    </div>
  </div>
<% else%>
    <div class="card grey lighten-3">
      <div class="card-action">
        <%= link_to "Add a new student", new_student_team_path(team_id: @team.id) %>
      </div>
    </div>
<% end%>